import "../styles/global.css";
---

<!doctype html>
<html lang="es">
  <head>
    <!-- Tipografías -->
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@900&display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Lora&display=swap" rel="stylesheet" />

    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" href="/favicon.ico" />

    <!-- SEO General -->
    <title>Defensa al Consumidor | Usuarios y Consumidores</title>
    <meta name="description" content="¿Tuviste un problema con un banco, prepaga o empresa? Nuestro equipo de abogados expertos en defensa al consumidor te asesora y te defiende como corresponde." />
    <meta name="keywords" content="abogado defensa al consumidor, reclamo banco, estafa bancaria, veraz, reclamos legales, defensa consumidor argentina, usuarios y consumidores, asesoramiento legal" />
    <meta name="author" content="Usuarios y Consumidores" />
    <meta name="robots" content="index, follow" />
    <meta name="language" content="es" />
    <meta name="generator" content={Astro.generator} />

    <!-- Open Graph para compartir -->
    <meta property="og:title" content="Defensa al Consumidor - Usuarios y Consumidores" />
    <meta property="og:description" content="Abogados especializados en defensa al consumidor. Reclamos por estafas bancarias, veraz, productos defectuosos, prepagas y más." />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://usuariosyconsumidores.com.ar/" />

    <!-- SEO Local Argentina -->
    <meta name="geo.region" content="AR-B" />
    <meta name="geo.placename" content="Buenos Aires" />
    <meta name="geo.position" content="-34.6037;-58.3816" />
    <meta name="ICBM" content="-34.6037, -58.3816" />
  </head>

  <body>
    <slot />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
    scroll-behavior: smooth;
    font-family: 'Lora', serif;
  }
</style>

<script>
  document.querySelectorAll('a[href^="#"]').forEach(anchor => {
    anchor.addEventListener("click", function (e) {
      const target = document.querySelector(this.getAttribute("href"));
      if (target) {
        e.preventDefault();
        const headerOffset = 80;
        const elementPosition = target.getBoundingClientRect().top;
        const offsetPosition = elementPosition + window.pageYOffset - headerOffset;

        window.scrollTo({
          top: offsetPosition,
          behavior: "smooth"
        });

        const navbarCheckbox = document.getElementById("navbar-open");
        if (navbarCheckbox && navbarCheckbox.checked) {
          navbarCheckbox.checked = false;
        }
      }
    });
  });
</script>
